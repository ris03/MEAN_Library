<% include ../partials/header %>

<div class="container">
    <h1>Welcome Admin</h1>
    <a href="/newbook" class="btn btn-info">Add a new Book</a>
    <a href="/adminallbooks" class="btn btn-info">All Books</a>
    <a href="/admin" class="btn btn-primary">Requested Books</a>
    <h2>Add a new book</h2>
    <form action="/newbook" method="POST">
        <div class="form-group">
            <label class="form-inline">Name</label>
            <input class="form-control " type="text" name="bookname" placeholder="bookname">
        </div>
        <div class="form-group">
            <label class="form-inline">Publishing Company/Publisher</label>
            <input class="form-control " type="text" name="publisher" placeholder="Publisher Name">
        </div>
        <div class="form-group">
            <label class="form-inline">Author's Name</label>
            <input class="form-control " type="text" name="author" placeholder="Author Name">
        </div>
        <div class="form-group">
            <label class="form-inline">Number of Books</label>
            <input class="form-control " type="text" name="units" placeholder="No. of Books">
        </div>
        <button class="btn btn-primary" type="submit" >Add Book</button>
    </form>
</div>
<% include ../partials/footer %>