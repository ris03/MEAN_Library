<% include ../partials/header %>
<div  style="width:30%"class="container">
        <h1>Sign Up page</h1>
<form action="/signup" method="POST">
    <div class="form-group">
            <label class="form-inline">Full Name</label>
            <input class="form-control " type="text" name="name" placeholder="Full Name">
    </div>
    <div class="form-group">
            <label class="form-inline">Birthday</label>
            <input class="form-control" type="text" name="dob" placeholder="DD/MM/YYYY">
    </div>
    <div class="form-group">
        <label class="form-inline">Gender</label>
        <input class="form-control" type="text" name="gender" placeholder="gender">
    </div>
    <div class="form-group" >
            <label>Phone No.</label>
            <input class="form-control" type="text" name="phone" placeholder="XXXXXXXXXX">
        </div>
    <div class="form-group">
        <label>Email</label>
        <input class="form-control" type="text" name="username" placeholder="abc@xyz.com">
    </div>
    <div class="form-group">
        <label>Password</label>
        <input class="form-control" type="password" name="password" placeholder="password">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>

<% include ../partials/footer %>