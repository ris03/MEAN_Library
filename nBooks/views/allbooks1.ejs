<% include ../partials/header %>

<div class="container">
        <h1>List of All books</h1>
            <form class="form-group form-inline " action="/search" method="POST">
                <input style="width:20%" class="form-control " type="text" name="search" placeholder="searchbook">
                <button style="display:inline" class="btn btn-success">Search</button>
            </form>
            <form class="form-group form-inline " action="/sort" method="POST">
                <button style="display:inline" class="btn btn-success">Order by Name</button>
            </form>
            <table id="customers">
                    <tr>
                      <th>Name of the Book</th>
                      <th></th>
                    </tr>
                    <% books.forEach(function(book){ %>
                    <tr>
                      <td><%= book.name%></a></td>
                      <td><% if(book.availableunits > 0){ %>
                        <form style="display:inline"  action="/request/<%=book._id%>?_method=PUT" method="POST">                
                            <button class="btn btn-primary" style="float:right">Issue</button>
                        </form>
                    <% } else{ %>
                        <form style="display:inline"  action="/request/<%=book._id%>?_method=PUT" method="POST">                
                            <button disabled="disabled" class="btn btn-primary" style="float:right">Issue</button>
                        </form> 
                   <% } %>    
                    </td>
                    </tr>
                    <% }) %>
                    </table>
                    <a href="/user" class="btn btn-info">Back</a>
                </div>
<% include ../partials/footer %>